<!-- views/partials/posts-form.hbs -->
<fieldset>
    <legend>{{#if post}}Edit{{else}}New{{/if}} Post</legend>
    <div class="form-group">
        <label for="post-title">Title</label>
        <input class="form-control" id="post-title" type="text" name="title" value="{{post.title}}" />
    </div>
    <div class="form-group">
        <label for="post-content">Content</label><br />
        <textarea name="content" id="post-content" cols="30" rows="10" class="form-control">{{post.content}}</textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Save Post</button>
    </div>
</fieldset>
