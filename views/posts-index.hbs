<!-- views/home.hbs -->
<div class="row">
    <div class="col-6">
        <h1>Blog</h1>
    </div>
    <div class="col-6 text-right my-auto">
        <a href="/posts/new" class="btn btn-primary">New Post</a>
    </div>
    {{#each posts}}
    <div class="col-md-6 col-xl-4">
        <div class="card mb-4">
            <div class="card-body">
                <h2 class="card-title"><a href="/posts/{{this._id}}">{{this.title}}</a></h2>
                {{{ellipsis (markdown this.content) 128}}}
            </div>
        </div>
    </div>
    {{/each}}
</div>
